---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: longhorn-ingress
  namespace: longhorn-system
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`longhorn.${domain}`)
      kind: Rule
      services:
        - name: longhorn-frontend
          port: 80
  tls:
    certResolver: prod
